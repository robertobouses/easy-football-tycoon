package team

import (
	"database/sql"

	_ "embed"
)

//go:embed sql/get_team.sql
var getTeamQuery string

type repository struct {
	db      *sql.DB
	getTeam *sql.Stmt
}

func NewRepository(db *sql.DB) (*repository, error) {
	getTeamStmt, err := db.Prepare(getTeamQuery)
	if err != nil {
		return nil, err
	}

	return &repository{
		db:      db,
		getTeam: getTeamStmt,
	}, nil
}
