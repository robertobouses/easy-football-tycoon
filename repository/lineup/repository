package lineup

import (
	"database/sql"

	_ "embed"
)

//go:embed sql/get_team.sql
var getLineupQuery string

type Repository struct {
	db        *sql.DB
	getLineup *sql.Stmt
}

func NewRepository(db *sql.DB) (*repository, error) {
	getLineupStmt, err := db.Prepare(getLineupQuery)
	if err != nil {
		return nil, err
	}

	return &repository{
		db:        db,
		getLineup: getLineupStmt,
	}, nil
}
